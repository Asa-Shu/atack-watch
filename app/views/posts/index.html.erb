<h1>Atack Watch 掲示板</h1>

<div class="search-container">
  <%= form_tag(posts_path, method: :get) do %>
    <%= text_field_tag :search, params[:search], placeholder: "検索", class: "search-input" %>
    <%= submit_tag "検索", class: "search-button" %>
  <% end %>
</div>

<div class="button-container">
  <%= link_to "新しい投稿", new_post_path, class: "link-button" %>
</div>

<ul>
  <% @posts.each do |post| %>
    <li>
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <span>
        <small><%= post.created_at %></small>
      </span>
      <div class="edit-delete-wrapper">
        <%= link_to "編集", edit_post_path(post), class: "link-button" %>
        <%= button_to "削除", post_path(post), method: :delete, class: "link-delete-button" %>
      </div>
    </li>
  <% end %>
</ul>
